#!/bin/sh

echo "=> Installing WeasyPrint"
apt-get update
apt-get install build-essential libcairo2 libpango-1.0-0 libpangocairo-1.0-0 libgdk-pixbuf2.0-0 libffi-dev shared-mime-info libxml2-dev libxslt-dev libffi-dev libcairo2-dev libpango1.0-dev python-dev python-pip
apt-get install -y weasyprint
exit 0
